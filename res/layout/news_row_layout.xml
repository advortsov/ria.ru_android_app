<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_row_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/image_of_news"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pic" />

    </LinearLayout>



    <TextView
        android:id="@+id/news_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/layout_image"
        android:paddingBottom="2dp"
        android:text="Это заголовок новости. Это заголовок новости. Это заголовок новости. Это заголовок новости. Это заголовок новости. Это заголовок новости. "
        android:textColor="#040404"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignBottom="@+id/layout_image" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"

        android:paddingTop="2dp"
        android:text="11:23 25.11.2015"
        android:textColor="#343434"
        android:textSize="15sp"
        android:layout_below="@+id/layout_image"
        android:layout_toLeftOf="@+id/image_arrow"
        android:layout_toStartOf="@+id/image_arrow" />

    <TextView
        android:id="@+id/news_annotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="2dp"
        android:text="Это длинная аннотация для того, что я смог понять как работает верстка в нашем приложении. Это длинная аннотация для того, что я смог понять как работает верстка в нашем приложении. Это длинная аннотация для того, что я смог понять как работает верстка в нашем приложении."
        android:textColor="#343434"
        android:textSize="15sp"
        android:layout_below="@+id/news_date"
        android:layout_alignRight="@+id/news_name"
        android:layout_alignEnd="@+id/news_name" />

    <ImageView
        android:id="@+id/image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/right_arrow"
        android:background="#00000000"

        />

</RelativeLayout>
